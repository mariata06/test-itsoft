mixin product()
  section.product
    .product__bg-icon
        picture
          source(srcset="img/content/icon-wave2-desktop.svg" media="(min-width: 1280px)")
          +img-var("content", "icon-wave-mobile", "svg", 320, 242, "волна")
    .container
      .product__about
        h2.title.title--h2.product__title О производстве Венарус
        .product__img
          picture
            source(srcset="img/slides/links-zavod-2-desktop.png 1x, img/slides/links-zavod-2-desktop@2x.png 2x" media="(min-width: 768px)")
            img(src="img/slides/links-zavod-2-desktop.png" srcset="img/slides/links-zavod-2-desktop@2x.png 2x" alt="Завод")
        .product__slider.swiper
          .product__slider-container.swiper-container
            .product__slider-wrapper.swiper-wrapper
              .product__slider-slide.swiper-slide
                .product__slide-img
                  picture
                    source(srcset="img/slides/links-zavod-1-desktop.png 1x, img/slides/links-zavod-1-desktop@2x.png 2x" media="(min-width: 768px)")
                    img(src="img/slides/links-zavod-1-desktop.png" srcset="img/slides/links-zavod-1-desktop@2x.png 2x" alt="Завод")
              .product__slider-slide.swiper-slide
                .product__slide-img
                  picture
                    source(srcset="img/slides/links-zavod-1-desktop.png 1x, img/slides/links-zavod-1-desktop@2x.png 2x" media="(min-width: 768px)")
                    img(src="img/slides/links-zavod-1-desktop.png" srcset="img/slides/links-zavod-1-desktop@2x.png 2x" alt="Завод")
              .product__slider-slide.swiper-slide
                .product__slide-img
                  picture
                    source(srcset="img/slides/links-zavod-1-desktop.png 1x, img/slides/links-zavod-1-desktop@2x.png 2x" media="(min-width: 768px)")
                    img(src="img/slides/links-zavod-1-desktop.png" srcset="img/slides/links-zavod-1-desktop@2x.png 2x" alt="Завод")
            .product__slider-nav
              button.btn.btn--prev.product__slide-prev
                +icon("icon-prev", 34, 34)
              button.btn.btn--next.product__slide-next
                +icon("icon-next", 34, 34)
